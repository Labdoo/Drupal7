function _labdoo_lib_user_num_wikis($userId) {
  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'node');
  $query->propertyCondition('type', 'book');
  $query->propertyCondition('uid', $userId);
  $result = $query->count()->execute();

  return($result);
}


