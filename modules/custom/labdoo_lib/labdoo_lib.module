 *
 * @return TRUE if the block is to be displayed, FALSE otherwise
 *
 */
function labdoo_block_filter_sidebar_second() {
  $path = drupal_get_path_alias(current_path());
  if(strpos($path, "content/tag-one-dooject") !== FALSE)
      return FALSE;
  if(strpos($path, "content/follow-dooject") !== FALSE)
      return FALSE;
  $views_page = views_get_page_view();
  if (is_object($views_page)) {
    if($views_page->name == "global_inventory")
      return FALSE; 
  } 
  return TRUE;
}

