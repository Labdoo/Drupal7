    if(labdoo_lib_node_is_type(array('drupal_wall'), FALSE)) {
    if(sizeof($data['tabs']) > 0) {
      foreach($data['tabs'][0]['output'] as $key => $value) {
        if($value['#link']['path'] == "node/%/clone/%" || $value['#link']['path'] == "node/%/view") {
          unset($data['tabs'][0]['output'][$key]);
        }
      }
    }
  }
}


