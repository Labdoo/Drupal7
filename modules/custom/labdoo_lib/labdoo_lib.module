  }
  // Next cell
  $htmlCode = $htmlCode . '</td><td>';

  // Edoovillage stats 
  $htmlCode = $htmlCode . lbd_display_dooject_column_chart($nodeId, $type);  

  // Next cell
  $htmlCode = $htmlCode . '</td><td>';

  // Table ending
  $htmlCode = $htmlCode . '</td></tr></tbody></table>';

  return($htmlCode);
