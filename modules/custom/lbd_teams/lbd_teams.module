  // There are two ways to get the group ID
  if(!empty($_GET['og_group_ref'])) { 
    $nodeid = $_GET['og_group_ref'];
  }
  else {
    if (arg(0) != 'node' || !is_numeric(arg(1))) 
      return "";
    $nodeid = arg(1);
